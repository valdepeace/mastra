  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "noUncheckedIndexedAccess": false
